<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#E3EEFF"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/webinarLayout"
        android:layout_width="match_parent"
        android:layout_height="181dp"
        android:layout_margin="10dp"
        android:background="@drawable/webinar_layout"
        android:orientation="horizontal"
        android:weightSum="100">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30"
            app:cardCornerRadius="15dp">

            <ImageView
                android:id="@+id/webinarImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/poorgirl" />

        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="70"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginStart="5dp"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:id="@+id/webinar_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="85"
                    android:fontFamily="@font/nunito_light"
                    android:text="Webinar on Child starvation"
                    android:textAllCaps="true"
                    android:maxLines="2"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="15"
                    android:background="@drawable/webinar_date_layout_background"
                    android:backgroundTint="@color/appThemeColor">

                    <TextView
                        android:id="@+id/webinateDate"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:text="Jun 02"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="5dp">

                <TextView
                    android:id="@+id/webinar_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:maxLines="2"
                    android:fontFamily="@font/poppins"
                    android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit."
                    android:textAppearance="?attr/textAppearanceListItem"
                    android:textColor="#959799"
                    android:textSize="12sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginStart="5dp">

                <TextView
                    android:id="@+id/webinateTimings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_toRightOf="@+id/webinartimetv"
                    android:fontFamily="@font/nunito_light"
                    android:text="11:00 am to 13:00 am"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginStart="5dp">

                <TextView
                    android:id="@+id/webinarDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:fontFamily="@font/nunito_light"
                    android:text="2 Hours"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginStart="5dp"
                android:orientation="horizontal">

                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:fontFamily="@font/nunito_light"
                android:text="Organisation:"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold" />


                <TextView
                    android:id="@+id/webinateOrganision"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:fontFamily="@font/nunito_light"
                    android:text="Khusiyaan"
                    android:textColor="@color/appButtonColor"
                    android:textSize="14sp"
                    android:textStyle="bold" />


            </LinearLayout>


