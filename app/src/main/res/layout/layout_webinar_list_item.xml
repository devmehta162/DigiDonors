<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#FDF2F2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/webinar_layout"
        android:layout_margin="10dp"
        android:weightSum="100"
        android:id="@+id/p">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30"
            >

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/icon"
                android:src="@drawable/icon"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:id="@+id/pic" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="70"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:id="@+id/webinar_title"
                    android:layout_width="0dp"
                    android:layout_weight="90"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="Webinar on Child starvation"
                    android:textAllCaps="true"
                    android:textColor="#0B0B0B" />

                
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:layout_height="43dp"
                    android:background="@drawable/webinar_date_layout_background"
                    android:backgroundTint="@color/appThemeColor"
                    >
                    <TextView
                        android:id="@+id/webinateDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:textColor="@color/white"
                        android:text="Jun 02"
                        android:layout_marginLeft="10dp"
                        android:textSize="12sp"
                        />
                </LinearLayout>

            </LinearLayout>
            


            <TextView
                android:id="@+id/webinar_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:textSize="12sp"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit."
                android:textAppearance="?attr/textAppearanceListItem"
                android:fontFamily="sans-serif-condensed-medium"
                android:textColor="#959799" />

            <TextView
                android:id="@+id/webinateTimings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_toRightOf="@+id/webinartimetv"
                android:textColor="#959799"
                android:text="11:00 am to 13:00 am"
                android:textSize="12sp"
                />
            




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/relLayout1"
                >


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="See Details"
                    android:id="@+id/joinNow"
                    android:textColor="@color/white"
                    android:layout_gravity="end"
                    android:background="#005CB2"
                    android:textSize="12sp"
                    android:layout_alignParentEnd="true"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/relLayout1"
                >

                <TextView
                    android:id="@+id/webinarDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:textColor="#959799"
                    android:textSize="12sp"
                    />


            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>