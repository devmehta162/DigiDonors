                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/mobileNo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/state"
                            android:layout_toRightOf="@+id/mobile"
